{
  "name": "catholic-hymn-book",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run preflight && vite build",
    "preview": "vite preview",
    "preflight": "node scripts/preflight.js",
    "clean": "node scripts/clean.js",
    "setup-db": "node scripts/db/setup-db.js",
    "download-pdf-worker": "node scripts/pdf/download-pdf-worker.js",
    "check-env": "node scripts/check-env.js",
    "clean-node-modules": "rm -rf node_modules/.vite",
    "diagnostic": "vite --debug",
    "serve": "vite preview --port 5173",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "check-env:cjs": "node scripts/check-env.cjs",
    "reset": "npm run clean && npm install && npm run dev",
    "upload": "node scripts/upload.js",
    "prebuild": "npm run download-pdf-worker",
    "apply-migrations": "supabase db push",
    "download-pdfjslib": "node scripts/download-pdfjslib.cjs",
    "postinstall": "node scripts/download-pdfjslib.js",
    "setup-pdf": "node scripts/download-pdfjslib.js",
    "download-pdfjs": "node scripts/download-pdfjslib.js",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@supabase/supabase-js": "^2.45.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-query-devtools": "^5.67.3",
    "date-fns": "^4.1.0",
    "dompurify": "^3.1.7",
    "lucide-react": "^0.479.0",
    "p-limit": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.13",
    "react-helmet-async": "^1.3.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^9.1.0",
    "react-pdf": "^9.1.0",
    "react-quill": "^0.0.2",
    "react-router-dom": "^6.27.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
